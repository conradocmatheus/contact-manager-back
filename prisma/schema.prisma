// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id        Int               @id @default(autoincrement())
  name      String
  email     String            @unique
  password  String
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  contacts  Contact[]         @relation("UserContacts")
  favorites FavoriteContact[] @relation("UserFavorites")
}

model Contact {
  id               Int               @id @default(autoincrement())
  name             String
  email            String            @unique
  phone            String
  userId           Int
  user             User              @relation("UserContacts", fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  favoriteContacts FavoriteContact[]
}

model FavoriteContact {
  id        Int     @id @default(autoincrement())
  userId    Int
  contactId Int
  user      User    @relation("UserFavorites", fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([userId, contactId])
}
